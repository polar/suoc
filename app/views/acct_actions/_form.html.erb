<% form_for(@acct_action, :html => { :class => "MainForm" }) do |f| %>
  <%= f.error_messages %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description,
         {:size => "86x5", :class => "rich_text_editor"} %>
  <%= f.label :account %>
  <%= f.collection_select :account_id, @accounts, :id, :name %>
  <%= f.label :category %>
  <%= f.collection_select :category_id, @categories, :id, :name %>
  <%= f.label :action_type %>
  <%= f.collection_select :action_type_id, @types, :id, :name %>
  <p>
    <%= f.submit @submit %>
  </p>
<% end %>
