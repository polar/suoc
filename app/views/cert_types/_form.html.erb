<% form_for(@cert_type, :html => { :class => "MainForm" }) do |f| %>
  <%= f.error_messages %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :position %>
  <%= f.text_field :position %>
  <%= f.label :description %>
  <%= f.text_area :description,
         {:size => "86x5", :class => "rich_text_editor"} %>
  <p>
    <%= f.submit @submit %>
  </p>
<% end %>
