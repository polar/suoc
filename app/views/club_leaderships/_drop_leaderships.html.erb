<%
# This partial lists the years and name of the leaders.
# locals :
#     leaderships  Collection of ClubLeadership
%>
<% for leadership in leaderships do %>
 <%
    leaders = leaders.select {|x| [ClubMemberStatus['Active'], ClubMemberStatus['Life']].include? x.member.club_member_status }
    leaders = leadership.leaders.sort {|x,y| x.member.name <=> y.member.name}
 %>
 <%= render :partial => "club_leaderships/drop_leader_list",
            :locals => { :leadership => leadership, :leaders => leaders } %>
 <p>
<% end %>
