<% if !trip_regs.empty? %>
<h3>Pending Trip Registrations</h3>
<table>
  <tr>
    <th>Trip Name</th>
    <th>Activity</th>
    <th>Date</th>
    <th>Status</th>
  </tr>
<% for t in trip_regs %>
  <tr>
   <% if show_tr_edit(t) %>
     <td><%= link_to t.trip_name, edit_club_trip_registration_path(t) %></td>
   <% else %>
     <td><%= link_to t.trip_name, club_trip_registration_path(t) %></td>
   <% end %>
   <td><%= t.leadership.name %></td>
   <td><%= t.departure_date.strftime("%m-%d-%Y") %></td>
   <td><%= t.submitted? ? "Submitted" : "Pending" %></td>
   <% if show_tr_delete(t) %>
     <td><%= button_to "Delete", club_trip_registration_path(t), :method => :delete, :confirm => "Are you sure you want to delete this trip registration?" %></td>
   <% end %>
  </tr>
<% end %>
</table>
<% end %>