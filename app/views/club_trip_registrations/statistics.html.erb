<%= render :partial => "shared/messages" %>
<h3>Trip Registration Statistics</h3>
<p>
<% form_tag url_for(:action => :statistics), :method => "get" do %>
Dates: From <%= text_field_tag :start_date, @start_date %> to <%= text_field_tag :end_date, @end_date %>
<%= submit_tag "GO" %>
<% end %>

<H3>By Leadership</H3>
<table class="tripstats">
<% as = ClubAffiliation.all %>
<tr>
  <th>Leadership</th>
  <th>Trips</th>
  <th>People</th>
  <% for a in as do %>
    <th><%= a.name %></th>
  <% end %>
</tr>
<% ls = trips_by_leadership(@trips) %>
<% for l in ls.sort {|x,y| x[:name] <=> y[:name]} do %>
  <tr class="leaderhipstats">
    <td><%= link_to l[:name], l[:leadership] %></td>
    <td><%= l[:trips] %></td>
    <td><%= l[:totals][:members] %></td>
    <% for a in as do %>
       <td><%= l[:totals][:affil][a.id] %></td>
    <% end %>
  </tr>
<% end %>
</table>

<H3>By Leader</H3>
<table class="tripstats">
<tr>
  <th>Leader</th>
  <th>Total Trips</th>
  <th>People</th>
  <th>Leaderships</th>
  <th>Trips</th>
  <th>People</th>
</tr>
<% ls = trips_by_leader(@trips) %>
<% for l in ls.sort {|x,y| x[:name] <=> y[:name]} do %>
  <tr class="leaderstats">
   <td><%= link_to l[:name], l[:leader] %></td>
   <td><%= l[:trips] %></td>
   <td><%= l[:people] %></td>
   <% leaderships = l[:leaderships].sort {|x,y| x[:name] <=> y[:name]} %>
   <% if leaderships.size > 1 %>
       <% for x in leaderships do %>
         <td><%= x[:name] %></td>
         <td><%= x[:trips] %></td>
         <td><%= x[:totals][:members] %></td>
         </tr>
         <tr>
         <td></td>
         <td></td>
         <td></td>
       <% end %>
   <% else %>
       <% x = leaderships[0] %>
         <td><%= x[:name] %></td>
         <td><%= x[:trips] %></td>
         <td><%= x[:totals][:members] %></td>
   <% end %>
  </tr>
<% end %>
</table>