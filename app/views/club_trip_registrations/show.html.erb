<h3>Showing Trip <%= @club_trip_registration.trip_name %></h3>


<%= render :partial => "show_tr" %>

<% if @show_submit %>
  <% form_for @club_trip_registration,
              :url => url_for(:action => :submit_registration,
                              :id => @club_trip_registration),
               :html => { :class => "MainForm" } do |f| %>
    <p>
    <%= f.submit "Submit This Trip Registration" %>
  <% end %>
<% end %>

<p>
<p>
<% if @show_edit %>
<%= link_to 'Edit Trip Registration', edit_club_trip_registration_path(@club_trip_registration) %>
<% end %>
<p>
<%= link_to 'Pending Trip Registrations', url_for(:action => :index) %>
<% if @show_create %>
<p>
<%= link_to 'Create New Trip Registration', new_club_trip_registration_path %>
<% end %>
<% if @show_statistics %>
<p>
<%= link_to "Trip Registration Statistics", url_for(:action => :statistics) %>
<% end %>
<% if @show_configure %>
<p>
<%= link_to 'Configure Trip Registration', url_for(:action => :configure) %>
<% end %>
