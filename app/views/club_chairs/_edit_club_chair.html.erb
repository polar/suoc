<%
# This partial renders the editor button for adding
# an chair
%>
<% form_for(chair,
            :url => { :action => :new_chair },
            :html => { :class => "MainForm" }) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :member_id %>
  <%= f.label "I was/am the chair of " %>
  <%= f.collection_select :activity_id,
      ClubActivity.all, :id, :name, :prompt => true %>
  <%= f.label "from" %>
  <%= f.text_field :start_date,
          :value => (chair.start_date.strftime("%m-%d-%Y") if chair.start_date) %>
  <%= f.label "to" %>
  <%= f.text_field :end_date,
          :value => (chair.end_date.strftime("%m-%d-%Y") if chair.end_date) %>
  <p>
  <%= f.submit "Add Chair" %>
  </p>
<% end %>
