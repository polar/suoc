<%
 # This partial creates a table row for a single chair.
 # badge and then a vertical table of start and end date.
 # 
 #
 # Local Variables
 #        chairmanship  : The clubChairmanship for this chair
 #        member       : ClubChair to be displayed.
 #        link          : Link to use for avatar.
 #        rowclass      : CSS Class for row
 #
 %>
<tr <%= "class='#{rowclass}'" if rowclass %> > 
  <td><% form_for :suoc_chairmanship, 
          :url => { :action => :new_chair },
          :html => { :class => "button-to", :method => :put } do |form| %>
       <%= hidden_field_tag "chairmanship[id]", chairmanship.id %>
       <%= hidden_field_tag "member[id]", member.id %>
       <%= form.submit "Select" %>
       <% end %>
  </td>
  <td><%= render_member_badge(member) %></td>
</tr>
