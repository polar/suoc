<%
 # This partial creates form fields for a single chair in a table row.
 # It has a form fields to select the start date and end date. 
 #
 # Local Variables
 #        field_name The name used to assign the fields.
 #                   If used in a list, this is most likely
 #                     "chairs[3]".
 #        chair      The SuocChair to be displayed.
 #        rowclass   The CSS class for the table row.
 #
 %>
 <tr <%= "class='#{rowclass}'" if rowclass %> >
  <% fields_for field_name, chair do |chair_form| %>
    <td>
      <%= chair_form.hidden_field :id %>
      <%= render_member_badge(chair.member) %>
    </td>
    <td><table>
      <tr>
        <th>Chairmanship</th>
        <td><%= chair.chairmanship.name %></td>
      </tr>
      <tr>
        <th>Start Date</th>
        <td><%= chair_form.date_select :start_date %></td>
      </tr>
      <tr>
        <th>End Date</th>
        <td><%= chair_form.date_select :end_date %></td>
      </tr>
    </table></td>
  <% end %>
</tr>
