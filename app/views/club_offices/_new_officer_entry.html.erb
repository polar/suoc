<%
# This partial generates an entry for a new officer.
# A "new" officer has the special treatment of having the
# hidden fields for the office and profile ids.
#
# Locals:
#     field_name  The field name to use for the form fields.
#     officer     The new ClubOfficer model.
#     rowclass    The CSS rowclass for the row.
%>

<% fields_for field_name, officer do |officer_form| %>
  <%= officer_form.hidden_field :office_id %>
  <%= officer_form.hidden_field :member_id %>
  <tr <%= "class='#{rowclass}'" if rowclass %> >
    <td><%= render_member_badge(officer.member) %></td>
    <td><table>
      <tr>
        <th>Start Date</th>
        <td><%= officer_form.date_select :start_date %></td>
       </tr>
       <tr>
          <th>End Date</th>
          <td><%= officer_form.date_select :end_date %></td>
       </tr>
    </table></td>
  </tr>
<% end %>
