<%
 # This partial creates form fields for a single officer in a table row.
 # It has a form fields to select the start date and end date. 
 #
 # Local Variables
 #        field_name The name used to assign the fields.
 #                   If used in a list, this is most likely
 #                     "officers[3]".
 #        officer    The ClubOfficer to be displayed.
 #        rowclass   The CSS class for the table row.
 #
 %>
 <tr <%= "class='#{rowclass}'" if rowclass %> >
  <% fields_for field_name, officer do |officer_form| %>
    <td>
      <%= officer_form.hidden_field :id %>
      <%= render_member_badge(officer.member) %>
    </td>
    <td><table>
      <tr>
        <th>Office</th>
        <td><%= officer.office.name %></td>
      </tr>
      <tr>
        <th>Start Date</th>
        <td><%= officer_form.date_select :start_date %></td>
      </tr>
      <tr>
        <th>End Date</th>
        <td><%= officer_form.date_select :end_date %></td>
      </tr>
    </table></td>
  <% end %>
</tr>
