<%
 # This partial creates a table row for a single leader.
 # badge and then a vertical table of start and end date.
 # 
 #
 # Local Variables
 #        leadership    : The ClubLeadership for this leader
 #        member        : ClubMember to be displayed.
 #        link          : Link to use for avatar.
 #        rowclass      : CSS Class for row
 #
 %>
<tr <%= "class='#{rowclass}'" if rowclass %> > 
  <td><% form_for :club_leadership,
          :url => { :action => :new_leader },
          :html => { :class => "button-to", :method => :put } do |form| %>
       <%= hidden_field_tag "club_leadership[id]", leadership.id %>
       <%= hidden_field_tag "club_member[id]", member.id %>
       <%= form.submit "Select" %>
       <% end %>
  </td>
  <td><%= render_member_badge(member) %></td>
</tr>
