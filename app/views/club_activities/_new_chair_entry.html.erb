<%
# This partial generates an entry for a new chair.
# A "new" chair has the special treatment of having the
# hidden fields for the activity and profile ids.
#
# Locals:
#     field_name  The field name to use for the form fields.
#     chair     The new ClubChair model.
#     rowclass    The CSS rowclass for the row.
%>

<% fields_for field_name, chair do |chair_form| %>
  <%= chair_form.hidden_field :activity_id %>
  <%= chair_form.hidden_field :member_id %>
  <tr <%= "class='#{rowclass}'" if rowclass %> >
    <td><%= render_member_badge(chair.member) %></td>
    <td><table>
      <tr>
        <th>Start Date</th>
        <td><%= chair_form.text_field :start_date,
                :value => fmt_date(chair.start_date) %></td>
       </tr>
       <tr>
          <th>End Date</th>
          <td><%= chair_form.text_field :end_date,
                :value => fmt_date(chair.end_date) %></td>
       </tr>
    </table></td>
  </tr>
<% end %>
