<%
 # This partial creates a table row for a single chair.
 # badge and then a vertical table of start and end date.
 # 
 #
 # Local Variables
 #        chair : ClubChair to be displayed.
 #        link    : Link to use for avatar.
 #        rowclass : CSS Class for row
 #
 %>
<tr <%= "class='#{rowclass}'" if rowclass %> > 
  <td><%= render_member_badge(chair.member) %></td>
  <td><table>
    <tr>
      <th>Activity</th>
      <td><%= chair.activity.name %></td>
    </tr>
    <tr>
    <th>Start Date</th>
    <td><%= fmt_date(chair.start_date) %></td>
    </tr>
    <tr>
    <th>End Date</th>
    <td><%= fmt_date(chair.end_date) %></td>
    </tr>
  </table></td>
  <td>
  <ul class="EntryForm">
    <li>
    <% if view_retire_chair(chair) %>
      <%= button_to "Retire Chair",
                     url_for( :action => :retire_chair,
                              :id => chair.activity,
                              :chair => chair ),
                    :confirm => "Are you sure you want to retire #{chair.member.login} from the activity of #{chair.activity.name}?" %>
    <% end %>
    </li><li>
    <% if view_edit_chair(chair) %>
      <%= link_to "Edit Chair",
                   url_for( :action => :edit_chair,
                            :id => chair.activity,
                            :chair => chair ) %>
    <% end %>
    </li><li>
    <% if view_delete_chair(chair) %>
      <%= button_to "Delete Chair",
                    url_for( :action => :delete_chair,
                             :id => chair.activity,
                             :chair => chair ),
                    :confirm => "Are you sure you want to DELETE this chair entry, erasing the record forever?"  %>
    <% end %>
    </li>
  </ul>
</tr>
